{
  "name": "note-app",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "run-p dev:*",
    "dev:backend": "npm --workspace backend run dev",
    "dev:frontend": "npm --workspace frontend run dev",
    "dev:python": "cd python_service && uvicorn main:app --reload --port 8001",
    "dev:all": "concurrently -n BACKEND,FRONTEND,PY \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:python\"",
    "build:win": "npm --workspace frontend run build:win"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "npm-run-all": "^4.1.5",
    "cross-env": "^7.0.3"
  }
}
